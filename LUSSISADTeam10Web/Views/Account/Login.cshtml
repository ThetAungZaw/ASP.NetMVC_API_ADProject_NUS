
@model LUSSISADTeam10Web.Models.Account.UserViewModel

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <!doctype html>
    <html class="no-js" lang="">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title>Login - LUSSIS</title>
        <meta name="description" content="LUSSIS">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="apple-touch-icon" href="apple-icon.png">
        <link rel="shortcut icon" href="~/Styles/images/logo.png">
        <link rel="stylesheet" href="~/styles/css/normalize.css">
        <link rel="stylesheet" href="~/styles/css/bootstrap.min.css">
        <link rel="stylesheet" href="~/styles/css/font-awesome.min.css">
        <link rel="stylesheet" href="~/styles/css/themify-icons.css">
        <link rel="stylesheet" href="~/styles/css/flag-icon.min.css">
        <link rel="stylesheet" href="~/styles/css/cs-skin-elastic.css">
        <link rel="stylesheet" href="~/styles/scss/style.css">
        <link href="~/Styles/css/login.css" rel="stylesheet" />
        <style>
        </style>

        <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>

    </head>
    <body class="bg-white">


        <div class="sufee-login d-flex align-content-center flex-wrap">
            <div class="container">
                <div class="login-content">
                    <div class="login-logo">
                        <a href="index.html">
                            <img class="align-content" width="150" src="~/styles/images/logo.png" alt="">
                        </a>
                    </div>
                    <div class="login-form">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <label class="control-label col-md-2"> Username </label>
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-2"> Password </label>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <button type="Submit" class="btn btn-info btn-flat m-b-30 m-t-30">Login</button>
                    </div>
                </div>
            </div>
        </div>
        <script src="~/styles/js/vendor/jquery-2.1.4.min.js"></script>
        <script src="~/styles/js/popper.min.js"></script>
        <script src="~/styles/js/plugins.js"></script>
        <script src="~/styles/js/main.js"></script>
    </body>
</html>
}
