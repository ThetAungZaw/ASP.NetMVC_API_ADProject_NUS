@model IEnumerable<LUSSISADTeam10Web.Models.APIModels.InventoryModel>
@{
    ViewBag.Title = "Inventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title">
                <h1>Inventory</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8 hideinmobile">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="@Url.Action("Index", "Clerk")">Dashboard</a></li>
                    <li class="active">Inventory</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                   
                    <div class="card-body">
                        <h5 class="text-sm-center text-info hideinmobile"> <i class="ti-panel fa-3x"></i><br /> Inventory </h5><br />
                        <table id="bootstrap-data-table" class="table table-striped table-bordered">
                            <thead class="table-info">
                                <tr>
                                    <th>
                                        <h6><b>Item</b></h6>
                                    </th>
                                    <th class="hideinmobile">
                                        <h6><b>Category</b></h6>
                                    </th>
                                    <th class="hideinmobile">
                                        @Html.DisplayNameFor(model => model.UOM)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Stock)
                                    </th>
                                    <th class="hideinmobile">
                                       Reorder Level
                                    </th>
                                    <th class="hideinmobile">
                                        Reorder Qty
                                    </th>

                                    <th>Operation</th>

                                </tr>

                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ItemDescription)
                                        </td>
                                        <td class="hideinmobile">
                                            @Html.DisplayFor(modelItem => item.CategoryName)
                                        </td>
                                        <td class="hideinmobile">
                                            @Html.DisplayFor(modelItem => item.UOM)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Stock)
                                        </td>
                                        <td class="hideinmobile">
                                            @Html.DisplayFor(modelItem => item.ReorderLevel)
                                        </td>
                                        <td class="hideinmobile">
                                            @Html.DisplayFor(modelItem => item.ReorderQty)
                                        </td>

                                        <td>
                                            <div class="row">
                                                <div class="col-md-1">
                                                    <h5 class="text-sm-center text-info"></h5>
                                                    <a href="@Url.Action("EditItem", new { id = item.Invid })">
                                                        <span class="ti-pencil-alt text-info fa-2x"></span>
                                                    </a><br />
                                                </div>

                                                <div class="col-md-3">
                                                    <a href="@Url.Action("ItemTran", new { id = item.Itemid })">
                                                        <span class="ti-notepad text-info fa-2x"></span>
                                                    </a>
                                                </div>
                                            </div>
                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>